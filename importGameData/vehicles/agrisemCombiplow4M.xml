            </inputAttacherJoint>
        </inputAttacherJoints>
        <support animationName="moveSupport" />
    </attachable>

    <attacherJoints>
        <attacherJoint node="attacherJointBack" lowerTransLimit="0 0.1 0" upperTransLimit="0 0.1 0" upperRotationOffset="15" allowsLowering="false" lockDownTransLimit="false">
